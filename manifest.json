{
  "name": "ZeroWiki",
  "short_name": "ZeroWiki",
  "description": "This extension makes your browser load Wikipedia content from one of the available Wikipedia mirrors, instead of wikipedia.org.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/zerowiki_icon_19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/zerowiki_icon_16.png",
    "48": "icons/zerowiki_icon_48.png",
    "128": "icons/zerowiki_icon_128.png"
  },
  "permissions": [
    "*://*.wikipedia.org/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
