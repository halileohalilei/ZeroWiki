{
  "name": "ZeroWiki",
  "short_name": "ZeroWiki",
  "description": "This extension makes your browser load Wikipedia content from 0wikipedia.org instead of wikipedia.org.",
  "version": "0.0.3",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/zerowiki_icon_19.png"
  },
  "icons": {
    "16": "icons/zerowiki_icon_16.png",
    "48": "icons/zerowiki_icon_48.png",
    "128": "icons/zerowiki_icon_128.png"
  },
  "permissions":["*://*.wikipedia.org/*", "*://*.imgur.com/*" ,"webRequest","webRequestBlocking"]
}
